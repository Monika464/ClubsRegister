<!DOCTYPE html>

<html>
  <head>
    <title>{{title}}</title>
    <link rel="icon" href="/img/weather.png" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <div class="main-content">
      {{>header}}

      <p>Signup as a club</p>

      <form id="club-signup-form">
        <input id="email-input" placeholder="Email" />
        <input id="password-input" type="password" placeholder="Password" />
        <input id="text-name-input" placeholder="Name" />
        <input id="text-city-input" placeholder="City" />
        <input id="text-region-input" placeholder="Region" />
        <input id="number-phone-input" placeholder="Phone number" />
        <button>Send</button>
      </form>

      <div class="centered-div">
        <p id="message-3"></p>
        <p id="message-1"></p>
        <p id="message-2"></p>
        <p id="message-4"></p>
      </div>
    </div>

    {{>footer}}

    <script src="/js/clubsignup.js"></script>
  </body>
</html>
